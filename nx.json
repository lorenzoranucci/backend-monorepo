{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/go.mod"
    ]
  },
  "plugins": [
    "@nx-go/nx-go"
  ],
  "targetDefaults": {
    "lint": {
      "executor": "@nx-go/nx-go:lint",
      "options": {
        "linter": "golangci-lint run"
      }
    }
  }
}
